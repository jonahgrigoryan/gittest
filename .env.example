# Root environment variables consumed by docker compose and local scripts
# Copy this file to .env and adjust values / secrets before running Compose.

# Shared directories
RESULTS_DIR=./results
LOGS_DIR=./logs
CONFIG_DIR=./config
CACHE_DIR=./config/cache

# Default ports for health endpoints / dashboards
HEALTH_DASHBOARD_PORT=7600
OBSERVABILITY_PORT=7700

# External services
SOLVER_HOST=solver
SOLVER_PORT=50051
VISION_HOST=vision
VISION_PORT=50052
AGENTS_HOST=orchestrator

# Evaluation defaults
HANDS_DIR=./results/hands
EVAL_OUTPUT_DIR=./results/eval

# API keys are provided via env/.env.* overrides; keep them empty here
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
