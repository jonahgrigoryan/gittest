{
  "compliance": {
    "gameType": "NLHE_6max",
    "blinds": {
      "small": 1,
      "big": 2
    },
    "allowedEnvironments": [
      "private_sim"
    ],
    "siteAllowlist": []
  },
  "vision": {
    "layoutPack": "simulator/default",
    "dpiCalibration": 1.0,
    "confidenceThreshold": 0.9,
    "occlusionThreshold": 0.05
  },
  "gto": {
    "cachePath": "cache",
    "subgameBudgetMs": 400,
    "deepStackThreshold": 100
  },
  "agents": {
    "models": [],
    "timeoutMs": 3000,
    "outputSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "actions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rationale": {
          "type": "string"
        }
      },
      "required": [
        "actions"
      ],
      "additionalProperties": true
    },
    "weightStorePath": "data/agents/weights.json",
    "costPolicy": {
      "maxTokensDecision": 6000,
      "maxTokensDay": 250000,
      "maxLatencyMs": 2500,
      "consecutiveFailureThreshold": 3,
      "recoveryHands": 2
    },
    "circuitBreaker": {
      "consecutiveFailureThreshold": 4,
      "cooldownHands": 3,
      "minCooldownMs": 60000
    },
    "personaOverrides": {
      "exploit_aggressor": {
        "temperature": 0.75,
        "styleHints": {
          "guidelines": [
            "Exploit autopilot continuation bets and capped turn ranges."
          ],
          "emphasis": [
            "Document villain leaks when deviating from balanced play."
          ]
        }
      },
      "risk_averse_value": {
        "maxTokens": 220,
        "styleHints": {
          "emphasis": [
            "Avoid thin bluffs when effective stack < 30bb."
          ]
        }
      }
    }
  },
  "strategy": {
    "alphaGTO": 0.7,
    "betSizingSets": {
      "preflop": [
        0.5,
        1.0,
        2.0,
        3.0
      ],
      "flop": [
        0.33,
        0.5,
        0.75,
        1.0
      ],
      "turn": [
        0.5,
        0.75,
        1.0,
        1.5
      ],
      "river": [
        0.5,
        1.0,
        1.5,
        2.0
      ]
    },
    "divergenceThresholdPP": 30,
    "opponentModeling": {
      "enabled": false,
      "minHands": 200
    }
  },
  "execution": {
    "enabled": false,
    "mode": "simulator",
    "verifyActions": true,
    "maxRetries": 1,
    "verificationTimeoutMs": 2000,
    "simulatorEndpoint": "http://localhost:8080/api",
    "researchUI": {
      "allowlist": [
        "pokerstars",
        "ggpoker"
      ],
      "prohibitedSites": [
        "bet365",
        "williamhill"
      ],
      "requireBuildFlag": true
    }
  },
  "safety": {
    "bankrollLimit": 5000,
    "sessionLimit": 0,
    "panicStopConfidenceThreshold": 0.99,
    "panicStopConsecutiveFrames": 3
  },
  "logging": {
    "enabled": true,
    "outputDir": "../../results/hands",
    "sessionPrefix": "session",
    "flushIntervalMs": 250,
    "maxFileSizeMb": 50,
    "retentionDays": 14,
    "exportFormats": [
      "json"
    ],
    "redaction": {
      "enabled": true,
      "fields": [
        "playerNames",
        "ids",
        "reasoning"
      ]
    },
    "metrics": {
      "enabled": true,
      "windowHands": 200
    }
  },
  "monitoring": {
    "health": {
      "intervalMs": 5000,
      "degradedThresholds": {
        "visionConfidenceMin": 0.99,
        "solverLatencyMs": 800,
        "executorFailureRate": 0.2
      },
      "safeMode": {
        "enabled": true,
        "autoExitSeconds": 60
      },
      "panicStop": {
        "visionConfidenceFrames": 3,
        "minConfidence": 0.99,
        "riskGuardAutoTrip": true
      },
      "dashboard": {
        "enabled": false,
        "port": 7777
      }
    },
    "observability": {
      "logs": {
        "level": "info",
        "sinks": {
          "console": {
            "enabled": true
          },
          "file": {
            "enabled": false,
            "outputDir": "../../results/session/audit",
            "maxFileSizeMb": 25,
            "maxFiles": 10
          },
          "webhook": {
            "enabled": false,
            "url": "https://example.com/webhook",
            "batchSize": 10,
            "retry": {
              "attempts": 3,
              "backoffMs": 1000
            }
          }
        }
      },
      "metrics": {
        "flushIntervalMs": 5000,
        "maxRecentHands": 200,
        "emitHandSummaries": false
      },
      "alerts": {
        "enabled": false,
        "cooldownMs": 60000,
        "channels": [],
        "triggers": {
          "panicStop": { "enabled": true, "cooldownMs": 60000 },
          "safeMode": { "enabled": true, "cooldownMs": 60000 },
          "solverTimeouts": { "enabled": true, "cooldownMs": 60000, "windowHands": 5 },
          "agentCost": { "enabled": true, "cooldownMs": 60000, "threshold": 500 },
          "healthDegradedMs": { "enabled": true, "cooldownMs": 60000 }
        }
      }
    }
  },
  "evaluation": {
    "opponents": {
      "tight_aggressive": {
        "id": "tight_aggressive",
        "label": "Tight Aggressive Bot",
        "description": "Baseline TAG opponent used for smoke tests",
        "style": "tight_aggressive",
        "aggressionFactor": 1.2,
        "bluffFrequency": 0.1
      },
      "loose_passive": {
        "id": "loose_passive",
        "label": "Loose Passive Bot",
        "style": "loose_passive",
        "aggressionFactor": 0.6,
        "bluffFrequency": 0.05
      }
    },
    "smoke": {
      "maxHands": 2000,
      "opponents": [
        "tight_aggressive"
      ],
      "seed": 1337
    },
    "offline": {
      "maxHands": 1000000,
      "checkpointHands": 10000
    },
    "shadow": {
      "defaultResultsDir": "../../results/hands"
    },
    "abTest": {
      "maxHands": 500000,
      "confidence": 0.95
    }
  }
}
