{
  "compliance": {
    "gameType": "NLHE_6max",
    "blinds": { "small": 1, "big": 2 },
    "allowedEnvironments": ["private_sim"],
    "siteAllowlist": []
  },
  "vision": { "layoutPack": "simulator/default", "dpiCalibration": 1.0, "confidenceThreshold": 0.9, "occlusionThreshold": 0.05 },
    "gto": { "cachePath": "cache", "subgameBudgetMs": 400, "deepStackThreshold": 100 },
  "agents": {
    "models": [],
    "timeoutMs": 3000,
    "outputSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "actions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "rationale": { "type": "string" }
      },
      "required": ["actions"],
      "additionalProperties": true
    },
    "weightStorePath": "data/agents/weights.json",
    "costPolicy": {
      "maxTokensDecision": 6000,
      "maxTokensDay": 250000,
      "maxLatencyMs": 2500,
      "consecutiveFailureThreshold": 3,
      "recoveryHands": 2
    },
    "circuitBreaker": {
      "consecutiveFailureThreshold": 4,
      "cooldownHands": 3,
      "minCooldownMs": 60000
    },
    "personaOverrides": {
      "exploit_aggressor": {
        "temperature": 0.75,
        "styleHints": {
          "guidelines": ["Exploit autopilot continuation bets and capped turn ranges."],
          "emphasis": ["Document villain leaks when deviating from balanced play."]
        }
      },
      "risk_averse_value": {
        "maxTokens": 220,
        "styleHints": {
          "emphasis": ["Avoid thin bluffs when effective stack < 30bb."]
        }
      }
    }
  },
  "strategy": { "alphaGTO": 0.7, "betSizingSets": { "preflop": [], "flop": [], "turn": [], "river": [] }, "divergenceThresholdPP": 30 },
  "execution": { "mode": "simulator" },
  "safety": { "bankrollLimit": 5000, "sessionLimit": 0, "panicStopConfidenceThreshold": 0.99, "panicStopConsecutiveFrames": 3 },
  "logging": { "retentionDays": 14, "exportFormats": ["json"] }
}
