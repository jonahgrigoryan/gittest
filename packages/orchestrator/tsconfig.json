{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@poker-bot/agents": ["../agents/dist"],
      "@poker-bot/agents/*": ["../agents/dist/*"],
      "@poker-bot/shared": ["../shared/src"],
      "@poker-bot/shared/*": ["../shared/src/*"],
      "@poker-bot/executor": ["../executor/src"],
      "@poker-bot/executor/*": ["../executor/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../agents" },
    { "path": "../shared" },
    { "path": "../executor" }
  ]
}
