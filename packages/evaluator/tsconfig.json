{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "types": ["node"],
    "paths": {
      "@poker-bot/shared": ["../shared/src"],
      "@poker-bot/shared/*": ["../shared/src/*"],
      "@poker-bot/orchestrator": ["../orchestrator/src"],
      "@poker-bot/orchestrator/*": ["../orchestrator/src/*"],
      "@poker-bot/orchestrator/src": ["../orchestrator/src"],
      "@poker-bot/orchestrator/src/*": ["../orchestrator/src/*"],
      "@poker-bot/agents": ["../agents/src"],
      "@poker-bot/agents/*": ["../agents/src/*"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../shared" },
    { "path": "../orchestrator" },
    { "path": "../agents" }
  ]
}
